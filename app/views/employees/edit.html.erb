<h1>Edit employee information:</h1>


<%= form_tag "/employees/#{@employee.id}", method: :patch do %>

  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, @employee.first_name %>
  </div>

  <div>
    <%= label_tag :middle_name %>
    <%= text_field_tag :middle_name, @employee.middle_name %>
  </div>

  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, @employee.last_name %>
  </div>

  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, @employee.email %>
  </div>

  <div>
    <%= label_tag :job_title %>
    <%= text_field_tag :job_title, @employee.job_title %>
  </div>

  <div>
    <%= label_tag :salary %>
    <%= text_field_tag :salary, @employee.salary %>
  </div>

  <div>
    <%= label_tag :phone_number %>
    <%= text_field_tag :phone_number, @employee.phone_number %>
  </div>

  <div>
    <%= label_tag :gender %>
    <%= text_field_tag :gender, @employee.gender %>
  </div>

  <div>
    <%= label_tag :bio %>
    <%= text_field_tag :bio, @employee.bio %>
  </div>

  <div>
    <%= submit_tag 'Update Information' %>
  </div>

<% end %>

<a id="index-delete-button" data-confirm="Are you sure you want to delete the employee information?" data-method="delete" href="/employees/<%= @employee.id %>" rel="nofollow" role="button" class="btn btn-default btn-sm active">Delete</a>